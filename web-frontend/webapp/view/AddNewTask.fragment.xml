<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        id="addNewTask"
        title="Please add new task!">
        
        <content>
            <VBox>
                <!-- Name Input -->
                <Label text="Name"/>
                <Input id="taskNameInput" placeholder="Enter task name" />
                
                <!-- Text Input -->
                <Label text="Text"/>
                <Input id="taskTextInput" placeholder="Enter task description" />
            </VBox>
        </content>
        
        <beginButton>
            <Button text="Add" press="onAddTask" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCloseDialog" />
        </endButton>
        
    </Dialog>
</core:FragmentDefinition>
