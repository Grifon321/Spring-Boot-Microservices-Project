<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        id="updateUsers"
        title="Please update the users who have access to the task!">
        <content>
            <VBox>
                <Label id="updateUsersLabel" text="Update users"/>
                <Input id="updateUsersInput" placeholder="Enter user id" />
                <Select id="updateUsersSelect" width="100%">
                        <core:Item key="add" text="Add" />
                        <core:Item key="remove" text="Remove" />
                </Select>
            </VBox>
        </content>
        
        <beginButton>
            <Button text="Edit" press="onUpdateUsersDialog" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCloseUpdateUsersDialog" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
